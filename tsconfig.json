  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "target": "es2021",
    "module": "Node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": ["src/**/*"]
}
